<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <selector>
            <item android:state_pressed="true">
                <shape android:shape="rectangle">
                    <corners android:radius="3.0dip" />
                    <solid android:color="@*com.google.android.apps.translate:color/quantum_googblue400" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="3.0dip" />
                    <solid android:color="@*com.google.android.apps.translate:color/quantum_googblue500" />
                </shape>
            </item>
        </selector>
    </item>
    <item>
        <ripple android:color="@*com.google.android.apps.translate:color/quantum_googblue200">
            <item android:id="@*android:id/mask">
                <shape android:shape="rectangle">
                    <corners android:radius="3.0dip" />
                    <solid android:color="@*android:color/background_floating_material_dark" />
                </shape>
            </item>
        </ripple>
    </item>
</layer-list>

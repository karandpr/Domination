        <item name="*com.ruesga.rview:color">@*android:color/white</item>
        <item name="*com.ruesga.rview:spinBars">false</item>
    </style>

    <style name="AppThemeBase" parent="@*com.ruesga.rview:style/Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="*com.ruesga.rview:colorPrimary">@*com.ruesga.rview:color/primary</item>
        <item name="*com.ruesga.rview:colorPrimaryDark">@*com.ruesga.rview:color/primaryDark</item>

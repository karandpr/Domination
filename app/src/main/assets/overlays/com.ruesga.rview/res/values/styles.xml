        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:background">@*com.ruesga.rview:drawable/abc_edit_text_material</item>
        <item name="android:dropDownSelector">@*com.ruesga.rview:drawable/abc_list_selector_holo_dark</item>
        <item name="android:popupBackground">@*com.ruesga.rview:drawable/abc_popup_background_mtrl_mult</item>
    </style>
    <style name="Base.V7.Widget.AppCompat.EditText" parent="@*android:style/Widget.EditText">
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:background">@*com.ruesga.rview:drawable/abc_edit_text_material</item>
    </style>

    <style name="Widget.Design.BottomSheet.Modal" parent="@*android:style/Widget">
        <item name="android:background">@*android:color/background_floating_material_dark</item>
        <item name="*com.ruesga.rview:behavior_peekHeight">auto</item>
        <item name="*com.ruesga.rview:behavior_hideable">true</item>
        <item name="*com.ruesga.rview:behavior_skipCollapsed">false</item>
    </style>


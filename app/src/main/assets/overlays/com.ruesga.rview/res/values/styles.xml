    <style name="Platform.AppCompat.Light" parent="@*android:style/Theme.Material" />


    <style name="Base.TextAppearance.AppCompat.Widget.ActionBar.Subtitle.Inverse" parent="@*com.ruesga.rview:style/TextAppearance.AppCompat.Subhead">
